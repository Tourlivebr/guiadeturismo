---
import BaseLayout from '../layouts/BaseLayout.astro';
import StarRating from '../components/StarRating.astro';

// Dados do passeio
const passeio = {
  titulo: "Parque Space Adventure I",
  subtitulo: "Ingresso",
  categoria: "INGRESSOS E ATRAÇÕES",
  preco: 21.58,
  parcelas: 6,
  avaliacao: 4.00,
  totalAvaliacoes: 6,
  descricao: "Uma aventura espacial única! Explore o universo em uma experiência imersiva com tecnologia de ponta, simuladores espaciais e atrações que vão te levar às estrelas.",
  inclusoes: [
    "Acesso limitado a 15 atrações",
    "Show de patinação artística",
    "Patinação no gelo inclusa"
  ],
  duracao: "Dia inteiro",
  horarios: "Consulte horários de funcionamento",
  galeria: [
    "/images/space-adventure-1.jpg",
    "/images/space-adventure-2.jpg",
    "/images/space-adventure-3.jpg"
  ]
};

// Construir mensagem do WhatsApp
const mensagem = `Olá! Gostaria de mais informações sobre o ${passeio.titulo}.\n\nDetalhes:\n- ${passeio.subtitulo}\n- Preço: R$ ${passeio.preco.toFixed(2).replace('.', ',')}\n- Parcelamento: até ${passeio.parcelas}x sem juros\n\nPoderia me ajudar com mais informações?`;
const whatsappUrl = `https://wa.me/5554999999999?text=${encodeURIComponent(mensagem)}`;
---

<BaseLayout title={`${passeio.titulo} - Passeios na Serra Gaúcha`}>
  <main class="min-h-screen bg-gray-50 dark:bg-gray-900">
    <!-- Hero Section -->
    <section class="relative h-96 overflow-hidden">
      <img 
        src={passeio.galeria[0]} 
        alt={passeio.titulo}
        class="w-full h-full object-cover"
      />
      <div class="absolute inset-0 bg-black bg-opacity-40 flex items-center justify-center">
        <div class="text-center text-white">
          <h1 class="text-4xl lg:text-5xl font-bold mb-4">{passeio.titulo}</h1>
          <p class="text-xl opacity-90">{passeio.subtitulo}</p>
        </div>
      </div>
    </section>

    <!-- Conteúdo Principal -->
    <div class="container mx-auto px-4 py-12">
      <div class="grid lg:grid-cols-3 gap-8">
        <!-- Informações do Passeio -->
        <div class="lg:col-span-2">
          <!-- Avaliação e Categoria -->
          <div class="mb-6">
            <span class="inline-block bg-primary-100 text-primary-800 text-sm font-medium px-3 py-1 rounded-full mb-4">
              {passeio.categoria}
            </span>
            <div class="flex items-center gap-2 mb-4">
              <StarRating rating={passeio.avaliacao} />
              <span class="text-gray-600 dark:text-gray-400">
                {passeio.avaliacao} de {passeio.totalAvaliacoes} avaliações
              </span>
            </div>
          </div>

          <!-- Descrição -->
          <div class="mb-8">
            <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-4">Sobre o Passeio</h2>
            <p class="text-gray-700 dark:text-gray-300 leading-relaxed">
              {passeio.descricao}
            </p>
          </div>

          <!-- O que está incluído -->
          <div class="mb-8">
            <h3 class="text-xl font-bold text-gray-900 dark:text-white mb-4">O que está incluído</h3>
            <ul class="space-y-2">
              {passeio.inclusoes.map(item => (
                <li class="flex items-center gap-2 text-gray-700 dark:text-gray-300">
                  <svg class="w-5 h-5 text-green-500" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                  </svg>
                  {item}
                </li>
              ))}
            </ul>
          </div>

          <!-- Informações Adicionais -->
          <div class="grid md:grid-cols-2 gap-6">
            <div>
              <h4 class="font-semibold text-gray-900 dark:text-white mb-2">Duração</h4>
              <p class="text-gray-700 dark:text-gray-300">{passeio.duracao}</p>
            </div>
            <div>
              <h4 class="font-semibold text-gray-900 dark:text-white mb-2">Horários</h4>
              <p class="text-gray-700 dark:text-gray-300">{passeio.horarios}</p>
            </div>
          </div>
        </div>

        <!-- Card de Compra -->
        <div class="lg:col-span-1">
          <div class="bg-white dark:bg-gray-800 rounded-lg shadow-lg p-6 sticky top-6">
            <div class="text-center mb-6">
              <div class="text-3xl font-bold text-gray-900 dark:text-white mb-2">
                A partir de <span class="text-primary-600">R$ {passeio.preco.toFixed(2).replace('.', ',')}</span>
              </div>
              <p class="text-gray-600 dark:text-gray-400">
                Pague em até {passeio.parcelas}x sem juros
              </p>
            </div>
            
            <a 
              href={whatsappUrl}
              target="_blank"
              rel="noopener noreferrer"
              class="w-full bg-green-600 hover:bg-green-700 text-white font-bold py-4 px-6 rounded-lg transition-colors duration-200 flex items-center justify-center gap-2 mb-4"
            >
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.890-5.335 11.893-11.893A11.821 11.821 0 0020.885 3.488"/>
              </svg>
              COMPRAR AGORA
            </a>
            
            <p class="text-sm text-gray-500 dark:text-gray-400 text-center">
              Atendimento via WhatsApp
            </p>
          </div>
        </div>
      </div>

      <!-- Galeria de Imagens -->
      <div class="mt-12">
        <h3 class="text-2xl font-bold text-gray-900 dark:text-white mb-6">Galeria</h3>
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-4">
          {passeio.galeria.map((imagem, index) => (
            <div class="aspect-video overflow-hidden rounded-lg">
              <img 
                src={imagem} 
                alt={`${passeio.titulo} - Imagem ${index + 1}`}
                class="w-full h-full object-cover hover:scale-105 transition-transform duration-300"
              />
            </div>
          ))}
        </div>
      </div>
    </div>
  </main>
</BaseLayout>