---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import StarRating from '../components/StarRating.astro';

const passeio = {
  titulo: "Ingresso Selfie Gramado",
  subtitulo: "Cenários Instagramáveis",
  categoria: "INGRESSOS E ATRAÇÕES",
  preco: 16.50,
  avaliacao: 4.2,
  totalAvaliacoes: 15,
  parcelas: "6x sem juros",
  descricao: "Prepare-se para uma experiência única em Gramado! O Selfie Gramado oferece mais de 65 cenários instagramáveis especialmente criados para tornar seu feed mais interessante e divertido. Cada ambiente foi cuidadosamente projetado para proporcionar fotos incríveis, desde cenários românticos até espaços interativos e divertidos. É o local perfeito para criar memórias inesquecíveis e conteúdo incrível para suas redes sociais.",
  inclusos: [
    "Acesso a mais de 65 cenários",
    "Ambientes temáticos únicos",
    "Cenários para casais e famílias",
    "Espaços interativos",
    "Iluminação profissional"
  ],
  duracao: "1-2 horas",
  horarios: ["09:00", "11:00", "14:00", "16:00", "18:00"],
  galeria: [
    "/images/gramado_selfie_.webp",
    "/images/cristais_de_gramado_o_inquestionavel.jpg",
    "/images/grupo-dreams-passaporte.jpg",
    "/images/terra-magica-florybal.webp"
  ],
  tags: [
    "São mais de 65 cenários",
    "Seu feed mais interessante"
  ]
};
---

<BaseLayout title={`${passeio.titulo} - Guia Turismo`} description={passeio.descricao}>
  <Header />
  
  <main class="min-h-screen bg-gray-50 dark:bg-gray-900">
    <!-- Hero Section -->
    <section class="relative h-96 bg-gradient-to-r from-blue-600 to-purple-600 overflow-hidden">
      <div class="absolute inset-0 bg-black bg-opacity-40"></div>
      <img 
        src={passeio.galeria[0]} 
        alt={passeio.titulo}
        class="absolute inset-0 w-full h-full object-cover mix-blend-overlay"
      />
      <div class="relative z-10 container mx-auto px-4 h-full flex items-center">
        <div class="text-white max-w-2xl">
          <div class="inline-block bg-blue-500 text-white px-3 py-1 rounded-full text-sm font-medium mb-4">
            {passeio.categoria}
          </div>
          <h1 class="text-4xl md:text-5xl font-bold mb-4">{passeio.titulo}</h1>
          <p class="text-xl text-gray-200 mb-6">{passeio.subtitulo}</p>
          <div class="flex items-center space-x-4">
            <StarRating rating={passeio.avaliacao} showValue={true} />
            <span class="text-gray-200">({passeio.totalAvaliacoes} avaliações)</span>
          </div>
        </div>
      </div>
    </section>

    <div class="container mx-auto px-4 py-12">
      <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
        <!-- Conteúdo Principal -->
        <div class="lg:col-span-2 space-y-8">
          <!-- Sobre este passeio -->
          <section class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-6">
            <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-4">Sobre este passeio</h2>
            <p class="text-gray-700 dark:text-gray-300 leading-relaxed">{passeio.descricao}</p>
          </section>

          <!-- O que está incluso -->
          <section class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-6">
            <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-4">O que está incluso</h2>
            <ul class="space-y-3">
              {passeio.inclusos.map((item) => (
                <li class="flex items-center text-gray-700 dark:text-gray-300">
                  <svg class="w-5 h-5 text-green-500 mr-3 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                  </svg>
                  {item}
                </li>
              ))}
            </ul>
          </section>

          <!-- Tags -->
          <section class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-6">
            <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-4">Destaques</h2>
            <div class="flex flex-wrap gap-2">
              {passeio.tags.map((tag) => (
                <span class="bg-blue-100 text-blue-800 px-3 py-1 rounded-full text-sm font-medium dark:bg-blue-900 dark:text-blue-200">
                  {tag}
                </span>
              ))}
            </div>
          </section>

          <!-- Galeria -->
          <section class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-6">
            <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-4">Galeria</h2>
            <div class="grid grid-cols-2 md:grid-cols-3 gap-4">
              {passeio.galeria.map((imagem, index) => (
                <div class="relative group cursor-pointer" onclick={`openModal(${index})`}>
                  <img 
                    src={imagem} 
                    alt={`${passeio.titulo} - Imagem ${index + 1}`}
                    class="w-full h-32 object-cover rounded-lg transition-transform group-hover:scale-105"
                  />
                  <div class="absolute inset-0 bg-black bg-opacity-0 group-hover:bg-opacity-20 transition-opacity rounded-lg flex items-center justify-center">
                    <svg class="w-8 h-8 text-white opacity-0 group-hover:opacity-100 transition-opacity" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0zM10 7v3m0 0v3m0-3h3m-3 0H7" />
                    </svg>
                  </div>
                </div>
              ))}
            </div>
          </section>
        </div>

        <!-- Sidebar de Reserva -->
        <div class="lg:col-span-1">
          <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-6 sticky top-4">
            <div class="text-center mb-6">
              <p class="text-sm text-gray-500 dark:text-gray-400 mb-1">A partir de</p>
              <p class="text-3xl font-bold text-gray-900 dark:text-white">
                6x de R$ {passeio.preco.toFixed(2).replace('.', ',')}
              </p>
              <p class="text-sm text-gray-500 dark:text-gray-400">{passeio.parcelas}</p>
            </div>

            <div class="space-y-4 mb-6">
              <div class="flex justify-between items-center">
                <span class="text-gray-600 dark:text-gray-400">Duração:</span>
                <span class="font-medium text-gray-900 dark:text-white">{passeio.duracao}</span>
              </div>
              <div class="flex justify-between items-center">
                <span class="text-gray-600 dark:text-gray-400">Horários:</span>
                <span class="font-medium text-gray-900 dark:text-white">{passeio.horarios.join(', ')}</span>
              </div>
              <div class="flex justify-between items-center">
                <span class="text-gray-600 dark:text-gray-400">Categoria:</span>
                <span class="font-medium text-gray-900 dark:text-white">{passeio.categoria}</span>
              </div>
            </div>

            <a 
              href={`https://wa.me/5554999999999?text=Olá! Gostaria de comprar o ingresso para ${encodeURIComponent(passeio.titulo)} - ${encodeURIComponent(passeio.subtitulo)}`}
              target="_blank"
              rel="noopener noreferrer"
              class="w-full bg-green-500 hover:bg-green-600 text-white font-bold py-3 px-4 rounded-lg transition-colors duration-200 flex items-center justify-center space-x-2"
            >
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893A11.821 11.821 0 0020.465 3.63"/>
              </svg>
              <span>COMPRAR AGORA</span>
            </a>
          </div>
        </div>
      </div>
    </div>

    <!-- Modal da Galeria -->
    <div id="imageModal" class="fixed inset-0 bg-black bg-opacity-75 z-50 hidden flex items-center justify-center p-4">
      <div class="relative max-w-4xl max-h-full">
        <button 
          onclick="closeModal()"
          class="absolute top-4 right-4 text-white hover:text-gray-300 z-10"
        >
          <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
          </svg>
        </button>
        <img id="modalImage" src="" alt="" class="max-w-full max-h-full object-contain rounded-lg" />
      </div>
    </div>
  </main>
  
  <Footer />
</BaseLayout>

<script>
  const images = [
    "/images/gramado_selfie_.webp",
    "/images/cristais_de_gramado_o_inquestionavel.jpg",
    "/images/grupo-dreams-passaporte.jpg",
    "/images/terra-magica-florybal.webp"
  ];

  function openModal(index) {
    const modal = document.getElementById('imageModal');
    const modalImage = document.getElementById('modalImage');
    modalImage.src = images[index];
    modal.classList.remove('hidden');
  }

  function closeModal() {
    const modal = document.getElementById('imageModal');
    modal.classList.add('hidden');
  }

  // Fechar modal ao clicar fora da imagem
  document.getElementById('imageModal').addEventListener('click', function(e) {
    if (e.target === this) {
      closeModal();
    }
  });

  // Fechar modal com ESC
  document.addEventListener('keydown', function(e) {
    if (e.key === 'Escape') {
      closeModal();
    }
  });
</script>